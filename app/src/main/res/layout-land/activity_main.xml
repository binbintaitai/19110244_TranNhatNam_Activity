<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="757dp"
        android:layout_height="400dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Công cụ tính lãi tiền gửi"
            android:textColor="#03A9F4"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tiền gửi"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/tienGuiEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/app_name"
            android:minHeight="48dp"
            android:textColor="#2196F3"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lãi suất gửi"
            android:textSize="14dp"

            />


        <EditText
            android:id="@+id/laiGuiEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/app_name"
            android:textColor="#2196F3"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kỳ hạn gửi"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/kyHanGuiEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/app_name"

            android:textColor="#2196F3"
            android:textSize="14sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="xemKetQuaClick"
            android:text="Xem kết quả"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>