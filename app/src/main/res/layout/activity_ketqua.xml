<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KetQua"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <TextView
            android:id="@+id/sotienLaiTextView"
            android:layout_width="353dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Số tiền lãi nhận được"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tienLaiTextView"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sotienLaiTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:textColor="#03A9F4"

            android:textSize="30dp" />

        <TextView
            android:id="@+id/TongSoTienLaiTextView"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@+id/tienLaiTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="Tổng số tiền nhận được"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tongTienTextView"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TongSoTienLaiTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="#03A9F4"
            android:textColorLink="#03A9F4"
            android:textSize="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tongTienLaiTextView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:onClick="cameraClick"
            android:text="TAKE A PICTURE" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>