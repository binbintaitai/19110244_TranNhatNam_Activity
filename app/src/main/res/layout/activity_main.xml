<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Công cụ tính lãi tiền gửi"
            android:textColor="#03A9F4"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tiền gửi"

            />

        <EditText
            android:id="@+id/tienGuiEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/app_name"
            android:minHeight="48dp"
            android:textColor="#2196F3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lãi suất gửi"
            />

        <EditText
            android:id="@+id/laiGuiEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="@string/app_name"
            android:minHeight="48dp"
            android:textColor="#2196F3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kỳ hạn gửi"
            />

        <EditText
            android:id="@+id/kyHanGuiEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/app_name"
            android:minHeight="48dp"
            android:textColor="#2196F3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem kết quả"

            android:onClick="xemKetQuaClick"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>